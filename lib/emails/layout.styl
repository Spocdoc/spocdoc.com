@import '../../mvc/utils'
@import '../../mvc/style'

.content
  p
    line-height 1.6em

.email-centering
  margin 0 auto
  max-width unit(MAX_TEXT_WIDTH, em)
  padding 0 unit(PADDING_SIDES_SMALL, em)

.bar
  height unit(LOGGED_OUT_HEIGHT_PHONE, em)

.bar-border-container
  margin 0 auto
  max-width unit(MAX_TEXT_WIDTH + PADDING_SIDES_SMALL, em)
  // padding 0 unit(PADDING_SIDES_CENTERING - PADDING_SIDES_SMALL, em)
  height unit(BAR_PADDING_BOTTOM, em)

  .bar-border
    width 100%
    border-top unit(BOTTOM_BORDER, px) solid BOTTOM_COLOR


.body_footer
  white-space nowrap
  text-align center
  padding-top unit(PADDING_SIDES_SMALL, em)
  border-top 1px solid BOTTOM_COLOR
  margin-top 4em
  border-radius 4px
  overflow hidden
  margin-bottom 2em

  background BLACK_COLOR

  & > ul
    font-size 14px
    height 29px

  & > ul > li
    display inline-block
    margin 0 29px
    line-height 29px
    vertical-align top

  a, a:link, a:visited
    color LIGHT_GRAY

  a:hover
    color white
    
  .social
    a
      margin-right 2px
      cursor pointer
      border-radius 50%
      height 29px
      width 29px
      display inline-block

      &:hover
        text-decoration none
        background LINK_COLOR
        color white

      &:before
        font-family 'spocdicons'
        line-height 29px

  .bottom-box
    padding 1em 0

    .copy
      font-size 12px
      color hsl(0,0,50%)
