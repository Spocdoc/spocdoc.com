@import '../../utils'

.md-head

  a:hover
    cursor: pointer

  pre
    @extend $fixed
    padding: 0
    margin: 0
    tab-size: 4
    white-space: pre-wrap

  .md-editor-heading
    font-weight: bold

  .md-html-heading
    h1
      font-size: 2em

    h2
      font-size: 1.5em

    h3
      font-size: 1.17em

  .md-html-spaced-list li
    margin-top: 1em


