mixin menu-button(id)
  a.menu-button-overlay(id=id+'Overlay')
  a.btn.menu-button(id=id)
    span.icon-bar
    span.icon-bar
    span.icon-bar

mixin vert-dots(id)
  a.vert-dots(id=id)
    .dot
    .dot
    .dot

