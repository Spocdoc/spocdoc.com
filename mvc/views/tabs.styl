@import '../utils.styl'

.tabs
  .content-wrapper
    // height: 100%;
    padding-top: 2em;
    position: relative;
    top: -2em;
    box-sizing: border-box;

  .tab-list
    margin: 0;
    padding: 0;

    display: table;
    *display: block

    vertical-align: middle;

    width 100%
    border-collapse collapse
    white-space nowrap

    position relative
    z-index 2


    li
      display table-cell
      *display inline
      margin 0
      padding 0
      height 2em
      line-height 2em
      width 5%
      text-align center

      vertical-align: bottom
      // padding 8px 0.7em 15px 0.7em;
      // margin: 5px 1px -1px 0;
      // border-radius: 5px 5px 0 0;
      // border 1px solid transparent
      // color black

      &.selected
        a
          color BLACK_COLOR
          ease 'color'
          border-bottom-color LINK_COLOR

          &:hover, &:active
            cursor move
            color BLACK_COLOR

        &:first-child:last-child
          a
            &:hover, &:active
              cursor default

      a
        display inline-block
        *display inline
        width 100%
        height 100%
        vertical-align top
        overflow hidden
        margin 0
        padding 2px 0.7em 0 0.7em
        box-sizing border-box
        color BLACK_COLOR
        ease 'color'
        border-bottom 2px solid white

        &:hover, &:active
          text-decoration none
          color LINK_COLOR

        // only when icons are in use
        // span
        //   margin-left 0.5em

    &.no-labels
      li
        a
          span
            display none

    &.dragging
      li
        a:hover
          color BLACK_COLOR

