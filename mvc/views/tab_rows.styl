@import '../utils.styl'

.tab_rows
  height 100%
  width 100%
  position absolute

  .tabs
    height 100%
    box-sizing border-box
    padding-bottom 0.5em

    .content
      height 100%

    .content-wrapper
      height 100%

  &.split-2
    .tabs
      height 50%

  &.split-3
    .tabs
      height 33%

  &.split-4
    .tabs
      height 25%

  &.split-5
    .tabs
      height 20%

  &.split-6
    .tabs
      height 16%

