BUTTON_BACKGROUND = #eaeaea
BUTTON_GREEN_BACKGROUND = LIGHT_GREEN
BUTTON_BLUE_BACKGROUND = lighten(LINK_COLOR,20%)

$button
  @extend $inline-block
  @extend $sansserif
  cursor pointer

  text-align center
  // line-height 2em
  // padding 0 1em
  // margin 0 0.25em
  white-space nowrap

  line-height 1.125em
  padding 5px 0.8em
  margin 0.5em

  -webkit-touch-callout none
  user-select none

  border-radius 3px

  font-weight normal

  border 1px solid LIGHT_GRAY

  // background BUTTON_BACKGROUND
  color BLACK_COLOR

  &:hover
    text-decoration none
    border-color DARK_GRAY
    background LIGHTER_GRAY
    // background darken(BUTTON_BACKGROUND,10%)

  &:active
    // background darken(BUTTON_BACKGROUND,20%)

    span
      position relative
      top 1px
      left 1px

$button-blue
  @extend $button

  &, &:link, &:visited
    color white !important

  background BUTTON_BLUE_BACKGROUND

  border 0

  box-shadow 0px 3px 0px darken(BUTTON_BLUE_BACKGROUND, 20%)

  &:hover
    background lighten(BUTTON_BLUE_BACKGROUND,10%) !important

  &:active
    background darken(BUTTON_BLUE_BACKGROUND,20%) !important

$button-green
  @extend $button

  box-shadow 0px 3px 0px GREEN_COLOR

  background BUTTON_GREEN_BACKGROUND
  color white

  &:link, &:visited
    color white !important

  border 0

  &:hover
    background lighten(BUTTON_GREEN_BACKGROUND,10%) !important

  &:active
    background darken(BUTTON_GREEN_BACKGROUND,20%) !important
