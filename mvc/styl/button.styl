BUTTON_BACKGROUND = #eaeaea
BUTTON_GREEN_BACKGROUND = LIGHT_GREEN


$button
  @extend $inline-block
  cursor pointer

  text-align center
  line-height 2em
  padding 0 1em
  margin 0 0.25em
  white-space nowrap

  -webkit-touch-callout none
  user-select none

  border-radius 3px

  font-weight 300

  border 1px solid 

  // background BUTTON_BACKGROUND
  color #333

  &:hover
    text-decoration none
    // background darken(BUTTON_BACKGROUND,10%)

  &:active
    // background darken(BUTTON_BACKGROUND,20%)

    span
      position relative
      top 1px
      left 1px

$button-green
  @extend $button

  background BUTTON_GREEN_BACKGROUND
  color white

  &:hover
    background darken(BUTTON_GREEN_BACKGROUND,10%)

  &:active
    background darken(BUTTON_GREEN_BACKGROUND,20%)
