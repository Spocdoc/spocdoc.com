.menu-outer
  position relative
  display inline-block

.menu-divider
  padding-top 1px
  margin 5px 1px 6px
  border-bottom 1px solid #ddd

  hr
    display none

.dropdown-menu, .dropdown-menu-right
  position absolute
  z-index 900
  float left
  margin 2px 0 0
  border-color #999
  border-color rgba(0,0,0,0.2)
  border-style solid
  border-width 1px
  border-radius 4px
  box-shadow 0 5px 10px rgba(0,0,0,0.2)
  background-clip padding-box

  background #fff
  background-color rgba(255,255,255,.98)
  border 0
  box-shadow 0 1px 4px rgba(0,0,0,.25)
  padding 10px 0 5px
  user-select none

  min-width 6em

  h1
    font-size 1em
    margin 0
    padding 0 15px
    white-space nowrap
    font-weight bold
    color #ccc

  li
    display block
    float none
    line-height 0\9
    line-height inherit

    & > a
      position relative
      display block
      white-space nowrap
      float none
      clear both
      font-weight normal
      text-shadow none
      cursor pointer

      font-size 15px
      line-height 18px
      padding 5px 20px
      margin 0
      color BLACK_COLOR

      &:hover, &:focus
        text-decoration none
        background LINK_COLOR
        color white

      &:active
        background darken(LINK_COLOR,20%)
        border-color darken(LINK_COLOR,20%) !important

.dropdown-menu-right
  float none
  right 8px


.dropdown-caret, .dropdown-caret-right, .dropdown-caret-center
  position absolute
  z-index 901
  bottom -2px
  overflow hidden
  height 10px
  width 22px
  left 12px

  .caret-outer, .caret-inner
    position absolute
    top 0
    left 0
    display inline-block
    margin-left -1px

  .caret-outer
    border-left 7px solid transparent
    border-right 7px solid transparent
    border-bottom 7px solid #aaa
    border-bottom-color rgba(0,0,0,0.2)

    background transparent
    background-color rgba(255,255,255,.98)
    border 0
    box-shadow 0 0 4px rgba(0,0,0,.25)
    height 15px
    left 4px
    top 5px
    transform rotate(45deg)
    width 15px

  .caret-inner
    top 1px
    left 1px
    border-left 6px solid transparent
    border-right 6px solid transparent
    border-bottom 6px solid white

    display none

.dropdown-caret-center
  margin-left 50%
  left -10px

.dropdown-caret-right
  left auto
  right 18px

