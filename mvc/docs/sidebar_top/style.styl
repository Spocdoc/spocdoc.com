@import '../../utils'

.docs-sidebar_top
  margin-bottom 2em

  .search-container
    width 100% !important
    font-size 16px !important // required for ios to prevent zooming

    .search-field
      margin-bottom 0 !important

  .indicator
    margin-bottom 0.5em

  .tools
    &:before
      font-family spocdicons
      content '\f056'
      color DARK_GRAY

    &:hover, &.active
      &:before
        color LINK_COLOR

    span
      display none

  .split
    .left
      float left
    .right
      float right

  .split-clear
    clear both
