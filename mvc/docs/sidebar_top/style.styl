@import '../../utils'

.docs-sidebar_top
  .search-container
    width 100% !important
    font-size 16px !important // required for ios to prevent zooming

    .search-field
      margin-bottom 0 !important

  .editable
    color hsl(0,0,50%)
    margin 1em 0
    font-weight 300

    &:before
      margin-right 0.5em
      content: '○'

    &.can-edit
      color GREEN_COLOR
      font-weight normal

      &:before 
        text-shadow 0 0 0.5em hsl(120, 100%, 25%)
        content '●'


